<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_height="40dp"
        android:id="@+id/ad_soyad"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Ad Soyad"
        android:layout_alignEnd="@+id/do_email_picker">
    </EditText>


    <EditText
        android:layout_height="40dp"
        android:id="@+id/mobil"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Mobil"
        android:layout_below="@+id/ad_soyad"
        android:layout_alignStart="@+id/ad_soyad" />

    <EditText
        android:layout_height="40dp"
        android:id="@+id/work"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Work"
        android:layout_below="@+id/mobil"
        android:layout_alignStart="@+id/mobil" />

    <EditText
        android:layout_height="40dp"
        android:id="@+id/fax"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Fax"
        android:layout_below="@+id/work"
        android:layout_alignStart="@+id/work" />

    <EditText
        android:layout_height="40dp"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Email Adresi"
        android:layout_below="@+id/fax"
        android:layout_alignStart="@+id/fax" />

    <EditText
        android:layout_height="40dp"
        android:id="@+id/unvan"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Görev"
        android:layout_below="@+id/company"
        android:layout_alignStart="@+id/company" />

    <EditText
        android:layout_height="40dp"
        android:id="@+id/company"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:hint="Şirket"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/upload"
        android:hint="Sisteme Yükle"
        android:layout_below="@+id/do_email_picker"
        android:layout_alignStart="@+id/do_email_picker" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/do_email_picker"
        android:hint="Rehberden Seç"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/unvan">
    </Button>

</RelativeLayout>
