<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:src="@drawable/yakamoz"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/firma_adi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Firma Adı:"
        android:textSize="20sp"
        android:textColor="#000"
        android:paddingTop="20dp"

        android:paddingLeft="10dp"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/firma_adi_replace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        android:textSize="20sp"
        android:textColor="#000"
        android:paddingTop="20dp"

        android:paddingLeft="10dp"
        android:layout_below="@+id/image"
        android:layout_toEndOf="@+id/dialogButtonOK" />

    <TextView
        android:id="@+id/telefon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Firma Adı:"
        android:textSize="20sp"
        android:textColor="#000"
        android:paddingTop="20dp"

        android:paddingLeft="10dp"
        android:layout_below="@+id/firma_adi"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/telefon_replace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        android:textSize="20sp"
        android:textColor="#000"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/firma_adi_replace"
        android:layout_toEndOf="@+id/dialogButtonOK" />

    <ImageButton

        android:src="@drawable/call"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/offerButton"
        android:textColor="#2c9dde"
        android:background="#c6daec"
        android:layout_above="@+id/yetkili"
        android:layout_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/yetkili"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Firma Adı:"
        android:textSize="20sp"
        android:paddingTop="20dp"

        android:textColor="#000"
        android:paddingLeft="10dp"
        android:layout_below="@+id/telefon"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/yetkili_replace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        android:textSize="20sp"
        android:paddingTop="20dp"

        android:textColor="#000"
        android:paddingLeft="10dp"
        android:layout_below="@+id/telefon_replace"
        android:layout_toEndOf="@+id/dialogButtonOK" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:text=" Ok "
        android:layout_marginRight="5dp"
        android:layout_marginBottom="116dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/image" />



</RelativeLayout>